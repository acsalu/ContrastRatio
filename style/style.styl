rulerHeight=18px
rulerColorGray = #b0b0b0
rulerColorOrange = #ffad00
rulerColorLime = #9bcb00
rulerColorGreen = #369800


#rulers {
  margin 0px auto
  width 100%
  .ruler-title {
    font-family HelveticaNeue-Medium, sans-serif
    font-size 15px
  }

  .ruler-container {
    .ruler-indicator {
      width 20px
      position relative


      .ruler-indicator-text {
        font-family HelveticaNeue-Medium, sans-serif
        font-size 15px
        margin 0px auto
      }
      .ruler-indicator-circle {
        height 8px
        width 8px
        border-radius 100%
        background-color black
        margin 0px auto
      }
      .ruler-indicator-bar {
        width 2px
        height 5px
        background-color black
        margin 0px auto
      }
    }

    .ruler {
      margin -1px 0 0px 0
      width 100%
      height rulerHeight
      display block

      .ruler-component {
        display inline-block
        position relative
        height rulerHeight
        color white
        font-family HelveticaNeue-Medium, sans-serif
        font-size 12px
        line-height rulerHeight
        text-align center
      }
    }

    .ruler-sample-values > span {
      margin-top 3px
      position relative
      display inline-block
      width 20px
      text-align center
      ont-family HelveticaNeue-Medium, sans-serif
      font-size 15px
    }
  }

  #ruler-hierachy {
    #ruler-hierachy-disable {
      width 28%
      background-color rulerColorGray
    }
    #ruler-hierachy-level1 {
      width 13.5%
      background-color rulerColorOrange
    }

    #ruler-hierachy-level2 {
      width 23.5%
      background-color rulerColorLime
    }

    #ruler-hierachy-level3 {
      width 35%
      background-color rulerColorGreen
    }
  }

  #ruler-readability {
    #ruler-readability-disable {
      width 28%
      background-color rulerColorGray
    }
    #ruler-readability-low {
      width 7%
      background-color rulerColorOrange
    }

    #ruler-readability-high {
      width 65%
      background-color rulerColorGreen
    }
  }
}

