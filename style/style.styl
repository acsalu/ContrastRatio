    float left
    display inline-block
    margin-right 50px
    height 30px
    padding 40px 0px 20px 0px

    .header-contrast-title {
      font-family HelveticaNeue-CondensedBold, sans-serif
      font-size 15px
    }

    .header-contrast-content > div {
      display inline-block
      height circleRadius*2 - 2
