    .contrast-ratio-text {
      font-family HelveticaNeue-Bold, sans-serif
    }
  }

  .contrast-title-color {
    color colorTitleColor
  }

  #header-ratio {
    font-family HelveticaNeue-Bold, sans-serif
    font-size 21px
  }

  #header-title {
    font-size 20px
  }

  #header-color > * {
    float left
  }

  #header-color {
    .header-text {
      float left
      margin 0px 5px 0px 5px
      height circleRadius*2
      line-height circleRadius*2
    }

  }
}

header .container:after {
